APP_NAME=inventory-docs-portal
APP_ENV=dev
HTTP_PORT=8080
MAX_UPLOAD_MB=50

# IMPORTANT: ใน docker ให้ชี้ไปที่ service ชื่อ postgres (ไม่ใช่ localhost)
DATABASE_URL=postgres://inventory:inventory@postgres:5432/inventory_docs?sslmode=disable

# storage driver: smb | webdav
STORAGE_DRIVER=webdav

# SMB (when STORAGE_DRIVER=smb)
NAS_BASE_PATH=/mnt/nas/afc_docs

# WebDAV (when STORAGE_DRIVER=webdav)
WEBDAV_BASE_URL=http://sissolution.trueddns.com:50241/Project/customs_doc
WEBDAV_USER=wrung
WEBDAV_PASS=<<PUT_YOUR_PASSWORD_HERE>>
WEBDAV_TIMEOUT_SECONDS=60

JWT_SECRET=change-me-please
JWT_EXPIRES_MINUTES=720